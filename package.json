    "prettier": "^3.1.1",
    "prettier-plugin-glsl": "^0.1.3",
    "prettier-plugin-tailwindcss": "^0.5.10",
    "turbo": "^1.11.2"
  },
  "packageManager": "pnpm@8.11.0"
}

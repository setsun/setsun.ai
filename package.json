    "prettier": "^2.7.1",
    "prettier-plugin-glsl": "^0.0.10",
    "prettier-plugin-tailwindcss": "^0.1.11",
    "turbo": "^1.10.9"
  },
  "packageManager": "pnpm@8.6.10"
}
